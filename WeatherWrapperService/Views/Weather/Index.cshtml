@model WeatherDto

<h2>Weather Info</h2>

<form method="get">
    <input type="text" name="city" placeholder="Enter city" />
    <button type="submit">Get Weather</button>
</form>

@if (Model != null)
{
    <p>City: @Model.City</p>
    <p>Temperature: @Model.Main!.Temp °C</p>
    <p>Humidity: @Model.Main!.Humidity %</p>
    <p>Weather: @Model.Weather![0].Description</p>
}
